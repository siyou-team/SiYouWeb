<view wx:if="{{!isTrue}}">
  <view class="header">
    <view style='width:50%;display:flex;align-items: center;'>
      <image src="{{shoplogo}}"></image>
      <view class="shopname">{{shopname}}</view>
    </view>
    <view>{{tableNum}}桌</view>
  </view>
  <view class="selected">
    已选菜品
  </view>
  <view class="m-cells total-info" style='height:{{height}}rpx;overflow:hidden;font-size:28rpx;' wx:for="{{submitinfo.VendorShoppingCartItemsList}}" wx:for-item="items">
    <view class="message" style="" wx:for="{{items.items}}" wx:for-item="item">
      <view style="display:flex;width:64%;justify-content: space-between">
        <text style='width:55%;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;'>{{item.ProductSaleName}}</text>
        <text style="color:#999" wx:if="{{item.speStr}}">({{item.speStr}})</text>
        <text>×{{item.Amount}}</text>
      </view>
      <view class="m-order-typetxt" style="color:#999999">￥{{item.ProductPrice}}</view>
    </view>
  </view>
  <view class="more" bindtap='more' wx:if="{{isShow}}">展示更多</view>
  <view class='totlemoney'>
    <view style='text-align:right;width:67%'>共{{much}}份</view>
    <view style='text-align:right;padding-right:30rpx'>小计:<label class="highlight">￥{{submitinfo.VendorShoppingCartItemsList[0].ShoppingCartItemsTotalPrice}}</label> </view>
  </view>
  <view class="m-cells" wx:if="{{order_id=='undefined'}}">
    <view class='m-cell section1'>
      <view>就餐人数</view>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" style="width:50%">
        <view class="picker" style="display:flex;width:100%;justify-content: flex-end">
          <view style='color:#717171' wx:if="{{peopleNum}}">{{peopleNum}}人</view>
          <view style='color:#717171' wx:else>请选择就餐人数 <text class="m-cell-ft"></text></view>
        </view>
      </picker>
    </view>
    <view bindtap='remark' class="section1 m-cell">
      <view>备注</view>
      <view>
        <view style='color:#717171' wx:if="{{remark}}">{{remark}}</view>
        <view style='color:#717171' wx:else>口味偏好等 <text class="m-cell-ft"></text></view>
      </view>
    </view>
  </view>
  <view style='height:104rpx'></view>
  <view class="m-footer-btn" style="border-top:0">
    <form report-submit="true" bindsubmit="submitorder">
      <button class="m-footer-btn-main" formType="submit">确认下单</button>
    </form>
  </view>
</view>

<view wx:if="{{isTrue}}">
  <view class="m-cells-title" style="margin-bottom:20rpx">备注</view>
  <view class="m-cells m-cells-form">
    <view class="m-cell">
      <view class="m-cell-bd">
        <textarea class="u-textarea" maxlength="20" value="{{remark}}" bindinput="inputRemark"></textarea>
        <view class="u-textarea-counter"><label>{{remarkLength}}</label>/20</view>
      </view>
    </view>
  </view>
  <view style="display:flex;justify-content: space-around;align-items: center;margin-top:40rpx">
    <view class="condition" bindtap="condition" data-name="不吃辣" data-length="3">不吃辣</view>
    <view class="condition" bindtap="condition" data-name="少放辣" data-length="3">少放辣</view>
    <view class="condition" bindtap="condition" data-name="多放辣" data-length="3">多放辣</view>
  </view>
  <view style="display:flex;justify-content: space-around;align-items: center;margin-top:40rpx">
    <view class="condition" bindtap="condition" data-name="不吃蒜" data-length="3">不吃蒜</view>
    <view class="condition" bindtap="condition" data-name="不吃香菜" data-length="4">不吃香菜</view>
    <view class="condition" bindtap="condition" data-name="不吃葱" data-length="3">不吃葱</view>
  </view>

  <button class="u-btn u-btn-default" bindtap='goback' style="margin-top:50rpx">确认</button>
</view>