<view class="m-cells m-cells-form">
    <view class="m-cell">
        <view class="m-cell-hd"><label class="u-label">账号</label></view>
        <view class="m-cell-bd">
            <input class="u-input" type="number"  value="{{user_nickname}}"  disabled="true"/>
        </view>
    </view>
    <view class="m-cell">
        <view class="m-cell-hd"><label  class="u-label">真实姓名</label></view>
        <view class="m-cell-bd">
            <input class="u-input" type="text" value="{{user_realname}}" placeholder="请输入真实姓名" bindinput="inputReName" maxlength="10"/>
        </view>
    </view>
    <view class="m-cell">
        <view class="m-cell-hd"><label  class="u-label">身份证</label></view>
        <view class="m-cell-bd">
            <input class="u-input" type="idcard" value="{{user_idcard}}" placeholder="请输入身份证号码" bindinput="inputICard" maxlength="18"/>
        </view>
        <div wx:if="{{!isCardNo}}" class="m-cell-ft">
            <icon class="m-icon-warn" type="warn" ></icon>
        </div>
    </view>
    <view class="m-cell">
        <view class="m-cell-hd"><label  class="u-label">邮箱</label></view>
        <view class="m-cell-bd">
            <input class="u-input" type="text" value="{{user_email}}" placeholder="请输入邮箱地址" bindinput="inputuser_email" maxlength="30"/>
        </view>
        <view wx:if="{{!isUserEmail}}" class="m-cell-ft">
            <icon class="m-icon-warn" type="warn" ></icon>
        </view>
    </view>
    <view class="m-cell">
        <view class="m-cell-hd"><label  class="u-label">生日</label></view>
        <view class="m-cell-bd">
            <picker mode="date" bindchange="bindDateChange">
                <label>{{user_birthday}}</label>
            </picker>
        </view>
    </view>
    <view class="m-cell">
        <view class="m-cell-hd"><label class="u-label">手机号码</label></view>
        <view class="m-cell-bd">
            <input class="u-input" type="number" placeholder="请输入手机号码" maxlength="11" bindinput="inputphone" value="{{user_mobile}}"/>
        </view>
        <view wx:if="{{!isUserMobile}}" class="m-cell-ft">
            <icon class="m-icon-warn" type="warn" ></icon>
        </view>
    </view>
    <view class="m-cell m-cell-vcode">
        <view class="m-cell-hd">
            <label class="u-label">验证码</label>
        </view>
        <view class="m-cell-bd">
            <input class="u-input" type="number" placeholder="请输入验证码" maxlength="6" bindinput="inputcode"/>
        </view>
        <view wx:if="{{!isCode}}" class="m-cell-ft">
            <icon class="m-icon-warn m-code" type="warn"></icon>
        </view>
        <view wx:if="{{isSend}}" bindtap="sendmessage" class="m-vcode-btn">{{btntext}}</view>
        <view wx:else class="m-vcode-btn">{{btntext}}</view>
    </view>
</view>

<button class="u-btn u-btn-default" bindtap="submitInfo" style="margin-top:50rpx;">保存</button>
